generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model BusStop {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  direction String?
  codeRoute String?
  address   String?
  location  Location
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Location {
  lat Float
  lng Float
}

model BusRoute {
  id                   String  @id @default(auto()) @map("_id") @db.ObjectId
  code                 String? @unique
  address              String?
  routeDirectionStart  String?
  routeDirectionReturn String?
  color                String?
}
